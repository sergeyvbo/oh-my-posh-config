{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "green": "#98C379",
    "cyan": "#56B6C2",
    "blue": "#5FAAE8",
    "red": "#BF616A",
    "pink": "#D0666F"
  },
  "secondary_prompt": {
    "template": "<p:green,transparent>➜  </> ",
    "foreground": "p:green",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "<p:green,transparent>➜  </><p:cyan>{{ .Folder }}</></> ",
    "foreground": "p:green",
    "background": "transparent"
  },
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "➜",
          "foreground": "p:green",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "style": "folder"
          },
          "template": "  {{ .PWD }}",
          "foreground": "p:cyan",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " <p:blue>(</>{{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}<p:blue>)</>",
          "foreground": "p:pink",
          "type": "git",
          "style": "plain"
        },
        {
          "template": " ✗",
          "foreground": "p:red",
          "type": "status",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
